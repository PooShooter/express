generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  name    String
  id      String @id @default(uuid())
  brand   String
  chipset String
  vram    String
  price   Int
  stock   Int
  image   String
}

model User {
  name     String
  email    String
  password String
  id       String @id @default(uuid())
}

model Game {
  name        String
  id          String  @id @default(uuid())
  price       String
  rating      Decimal @db.Decimal(10, 2)
  image       String
  developer   String
  description String
}

model Pokemon {
  name     String
  id       String @id @default(uuid())
  type     String
  hp       Int
  evo      String
  weakness String
  image    String
}
